{
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["./src/**/*"],

  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",

    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noImplicitAny": true,

    "paths": {
      "*": ["@types/*"]
    }
  }
}
